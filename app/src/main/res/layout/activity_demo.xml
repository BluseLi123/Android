<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">
        <Button
            android:id="@+id/btn_logim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户登录"
            android:textSize="18dp" />

        <Button
            android:id="@+id/btn_calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="计算器"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_telephone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="电话簿"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/btn_sqlite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="数据库操作"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/btn_web"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="WEB源码查看器"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_netpicture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="网络图片查看器"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="新闻客户端"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文件下载"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="文件上传"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="音乐播放器"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频播放器"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_musiconline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="音乐播放器online"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_movieonline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="视频播放器online"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_douban"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="豆瓣影评"
            android:textSize="18dp"/>
        <Button
            android:id="@+id/btn_baidu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="百度地图"
            android:textSize="18dp"/>

        <Button
            android:id="@+id/btn_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="机器人聊天"
            android:textSize="18dp"/>

    </LinearLayout>

</ScrollView>
